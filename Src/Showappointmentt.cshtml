@model IEnumerable<ProjectSource.Models.Schedule>
<style>
    .btn-light {
        background-color:red;
        color: white;
        border-radius: 4px
    }

        
    a{
        color:white;
     }
    
    table {
        margin: 30px;
        backdrop-filter: blur(6px);
      
        background-image: url('https://egertontm.com/wp-content/uploads/2018/06/blue-gradient-background.png');
        color: white;
        border-radius: 6px;
        border: 2px;
        box-shadow: 0 5px #666;
    }

    img {
        position: absolute;
        top: 0px;
        right: 1px;
    }
    body {
        background-image: url('https://wallpaperaccess.com/full/340434.png');
    }
    div2 {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
        overflow: hidden;
        background-color: #333;
    }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            .topnav a.active {
                background-color: #0b7dda;
                color: black;
            }

</style>
<div2>
    <div2 class="topnav">
        <a href="https://localhost:44356/Home/HomePage">Home</a>
        <a href="https://localhost:44356/Home/Insertdo">Add Doctor</a>
        <a href="https://localhost:44356/Home/Insertpat">Add Patient</a>
        <a href="https://localhost:44356/Home/InsSchedule">Add Appointment</a>
        <a class="active">Cancel Appointment</a>
    </div2>
   
    <img src="~/images/Stone-Clinic-Logo.png" width="125" height="125" />
    <body>
        <center>
            <br />
            <br />
            <br />
            <h3><mark>Appointments available</mark></h3>
            <hr />
            <form id="form">
                


                <table align="center" border="1" width="100%">
                    <thead>
                        <tr>
                            
                            <th>
                                @Html.DisplayName("AppointmentId")
                            </th>
                            <th>
                                @Html.DisplayName("PateintId")
                            </th>
                            <th>
                                @Html.DisplayName("Specialization")
                            </th>
                            <th>
                                @Html.DisplayName("DoctorName")
                            </th>
                            <th>
                                @Html.DisplayName("Visit date")
                            </th>
                            <th>
                                @Html.DisplayName("Appointment time")
                            </th>
                            <th> Click Below To Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PatientId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Specializations)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisitDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentTime)
                            </td>
                            <td> <a icon asp-action="Deleteda" asp-route-id="@item.AppointmentId">Delete</a></td>



                        </tr>

                        }
                    </tbody>

                </table>
                <center>    <input type="button" value="Home" onclick="location.href = '@Url.Action("HomePage","Home")'" class="btn-danger" /> </center>
            </form>
        </center>
    </body>


