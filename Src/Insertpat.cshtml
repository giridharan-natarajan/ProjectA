@model ProjectSource.Models.Patient
<style>
    .btn-light {
        background-color: #2196F3;
        color: black;
        border-radius: 4px
    }

    .btn-dark {
        background-color: limegreen;
        color: black;
    }
    img {
        position: absolute;
        top: 0px;
        right: 1px;
    }
    div2 {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
        overflow: hidden;
        background-color: #333;
    }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            .topnav a.active {
                background-color: #0b7dda;
                color: black;
            }
    table {
        margin: 30px;
        backdrop-filter: blur(6px);
        
        background-image: url('https://egertontm.com/wp-content/uploads/2018/06/blue-gradient-background.png');
        color: white;
        border-radius: 6px;
        border: 2px;
        box-shadow: 0 5px #666;
    }

</style>
<div2>
    <div2 class="topnav">
        <a href="https://localhost:44356/Home/HomePage">Home</a>
        <a href="https://localhost:44356/Home/Insertdo">Add Doctor</a>
        <a class="active">Add Patient</a>
        <a href="https://localhost:44356/Home/InsSchedule">Add Appointment</a>
        <a href="https://localhost:44356/Home/Showappointmentt">Cancel Appointment</a>
    </div2>
 
    <body style="background-image: url('https://wallpaperaccess.com/full/340434.png')">
        <img src="~/images/Stone-Clinic-Logo.png" width="125" height="125" />
       
              <center>
                  <br />
                  <br />
                  <br />
                  <h3>  <mark>Add Patient</mark>  </h3>
                  <hr />


                  <table align="center" cellpadding="10" cellspacing="5" width="100%">
                      @using (Html.BeginForm("Patientad", "Home", FormMethod.Post))
                      {
                         

                      <tr>
                          <td>First Name</td>
                          <td>@Html.TextBoxFor(m => m.Firstname)</td>
                          <td>@Html.ValidationMessageFor(m => m.Firstname)</td>
                      </tr>
                      <tr>
                          <td>Last Name</td>
                          <td>@Html.TextBoxFor(m => m.Lastname)</td>
                          <td>@Html.ValidationMessageFor(m => m.Lastname)</td>
                      </tr>
                         <tr>
                              <td>Gender</td>
                              <td>
                                  @Html.RadioButtonFor(m => m.Gender, "M")M
                                  @Html.RadioButtonFor(m => m.Gender, "F")F
                                  @Html.RadioButtonFor(m => m.Gender, "O")O
                              </td>
                          </tr>
                          <tr>
                              <td>Date of birth</td>
                              <td>@Html.TextBoxFor(m => m.Dateofbirth)</td>
                          </tr>
                          <tr>
                              <td>Age</td>
                              <td>@Html.TextBoxFor(m => m.Age)</td>
                              <td>@Html.ValidationMessageFor(m => m.Age)</td>
                          </tr>


                          <tr>

                              <td><input type="submit" class="btn-dark" value="Submit" /></td>

                              <td><input type="button" value="Home" onclick="location.href = '@Url.Action("HomePage","Home")'" class="btn-danger" /></td>
                          </tr>
                      }
                  </table>



              </center>
        @Html.Raw(TempData["msg"])
    </body>


