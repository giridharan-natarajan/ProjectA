@{
}
<body>
    @using (Html.BeginForm("DoctorAd", "Home", FormMethod.Post))
    {
    <table cellpadding="10" cellspacing="5">
        <tr>
            <th>Doctor details</th>

        </tr>
        <tr>
            <td>Firstname:</td>
            <td>@Html.TextBoxFor(m => m.Firstname)</td>
        </tr>
        <tr>
            <td>Lastname</td>
            <td>@Html.TextBoxFor(m => m.Lastname)</td>
        </tr>
        <tr rowspan="3">
           <td >Gender</td>
            <td>@Html.RadioButtonFor(m => m.Gender, "M")M
            @Html.RadioButtonFor(m => m.Gender, "F")F
            @Html.RadioButtonFor(m => m.Gender, "O")O</td>
        </tr>
        <tr>
            <td>Specialization</td>
            <td>@Html.TextBoxFor(m => m.Specialization)</td>
        </tr>
        <tr>
            <td>VistingHours</td>
            <td>@Html.TextBoxFor(m => m.Visitinghours)</td>
        </tr>


        <tr>

            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
    }
</body>
