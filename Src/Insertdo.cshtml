@model ProjectSource.Models.Doctor
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
    .btn-light {
        background-color: #2196F3;
        color:black;
      
    }
    .btn-dark {
        background-color:limegreen;
        color: black;
        
    }

        
    img {
        position: absolute;
        top: 0px;
        right:1px;
    }
    div2 {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
        overflow: hidden;
        background-color: #333;
    }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            .topnav a.active {
                background-color: #0b7dda;
                color: black;
            }
    table {
        margin: 30px;
        backdrop-filter: blur(6px);
        background-image: url('https://egertontm.com/wp-content/uploads/2018/06/blue-gradient-background.png');
        color: white;
        border-radius: 6px;
        border: 2px;
        box-shadow: 0 5px #666;
        
    }

</style>


<div2>
    <div2 class="topnav">
        <a href="https://localhost:44356/Home/HomePage">Home</a>
        <a class="active">Add Doctor</a>
        <a href="https://localhost:44356/Home/Insertpat">Add Patient</a>
        <a href="https://localhost:44356/Home/InsSchedule">Add Appointment</a>
        <a href="https://localhost:44356/Home/Showappointmentt">Cancel Appointment</a>
    </div2>


    @Html.Raw(TempData["msg"])
    <body style="background-image: url('https://wallpaperaccess.com/full/340434.png'); ">


    
        <img src="~/images/Stone-Clinic-Logo.png" width="125" height="125" />
        @*<b> <marquee>Please Fill The Doctor Details</marquee></b>*@
    <center>
        <br/>
        <br/>
        <br/>
        <h3><mark>Add Doctor</mark></h3>
        <hr/>
        <table align="center" cellpadding="10" cellspacing="5" width="100%">

            @using (Html.BeginForm("DoctorAd", "Home", FormMethod.Post))
            {


                
            <tr>
                <td>First Name</td>
                <td>@Html.TextBoxFor(m => m.Firstname)</td>
                <td>@Html.ValidationMessageFor(m => m.Firstname)</td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td>@Html.TextBoxFor(m => m.Lastname)</td>
                <td>@Html.ValidationMessageFor(m => m.Lastname)</td>
            </tr>
               
                <tr>
                    <td>Gender</td>
                    <td>
                        @Html.RadioButtonFor(m => m.Gender, "M")M
                        @Html.RadioButtonFor(m => m.Gender, "F")F
                        @Html.RadioButtonFor(m => m.Gender, "O")O
                    </td>
                </tr>
                <tr>
                    <td>Specialization</td>
                    <td>
                        @Html.RadioButtonFor(m => m.Specialization, "General")General
                        @Html.RadioButtonFor(m => m.Specialization, "InternalMedicine")InternalMedicine
                        @Html.RadioButtonFor(m => m.Specialization, "Pediatrics")Pediatrics
                        @Html.RadioButtonFor(m => m.Specialization, "Opthamology")Opthamology
                        @Html.RadioButtonFor(m => m.Specialization, "Ortho")Ortho
                    </td>
                </tr>
                <tr>
                    <td>Visting Hours</td>
                    <td>
                        @Html.RadioButtonFor(m => m.Visitinghours, "0-1hrs")0-1hrs
                        @Html.RadioButtonFor(m => m.Visitinghours, "1-2hrs")1-2hrs
                        @Html.RadioButtonFor(m => m.Visitinghours, "2-3hrs")2-3hrs
                    </td>
                </tr>
                <tr>
                    <td>Timings</td>
                    <td>
                        @Html.RadioButtonFor(m => m.Timings, "9am")9am
                        @Html.RadioButtonFor(m => m.Timings, "10am")10am
                        @Html.RadioButtonFor(m => m.Timings, "11am")11am

                    </td>

                </tr>


                <tr>

                    <td><input type="submit" value="Submit" class="btn-dark" /></td>
                    <td><input type="button" value="Home" onclick="location.href = '@Url.Action("HomePage","Home")'" class="btn-danger" />
                    </td>
                </tr>
            }
        </table>
        </center>





</body>
